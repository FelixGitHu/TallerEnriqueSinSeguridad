<AuthorizeView>
    <Authorized>
        <span>Bienvenido, @context.User.Identity.Name!</span>
       
        <a href="Logout" class="btn btn-sm btn-outline-danger"><i class="oi oi-account-logout"></i>Cerrar Sesión</a>
        
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-sm btn-outline-primary" href="Registro">Registrarse</a>
        <a href="Login" class="btn btn-sm btn-outline-primary" >Iniciar Sesión</a>
    </NotAuthorized>
</AuthorizeView>