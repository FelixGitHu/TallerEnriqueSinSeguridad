<EditForm Model="Categoria" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            Categorías
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Nombre:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Categoria.Nombre" />
                        <ValidationMessage For="@(() => Categoria.Nombre)" />
                    </div>
                </div>

                <div class="form-group col-sm-8">
                    <label>Descripcion:</label>
                    <div>
                        <InputTextArea class="form-control" @bind-Value="@Categoria.Descripcion" />
                        <ValidationMessage For="@(() => Categoria.Descripcion)" />
                    </div>
                </div>
            </div>

            <div class="form-group col-12 d-flex justify-content-end" style="margin:5px">
                <button class="btn btn-success" style="margin:5px" type="submit">Guardar</button>
                <a class="btn btn-success" style="margin:5px" href="categorias">Cancelar</a>
                <MudTooltip Text="Desactiva o Reactiva un Registro." Color="Color.Secondary" Placement="Placement.Top">
                    <InputCheckbox @bind-Value="@Categoria.Estado"></InputCheckbox>
                    <label style="display:flex"><b>Dar De Baja</b></label>
                </MudTooltip>
            </div>
        </div>
    </div>
    

    
</EditForm>

@code {
    [Parameter] public Categoria Categoria { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
