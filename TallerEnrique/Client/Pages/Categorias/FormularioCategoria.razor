<EditForm Model="Categoria" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            Categorías
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Nombre:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Categoria.Nombre" />
                        <ValidationMessage For="@(() => Categoria.Nombre)" />
                    </div>
                </div>

                <div class="form-group col-sm-8">
                    <label>Descripcion:</label>
                    <div>
                        <InputTextArea class="form-control" @bind-Value="@Categoria.Descripcion" />
                        <ValidationMessage For="@(() => Categoria.Descripcion)" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">
                    <button class="btn btn-success" type="submit">Guardar Cambios</button>
                    <a href="categorias" class="btn btn-success">Cancelar</a>
                    <InputCheckbox @bind-Value="@Categoria.Estado"></InputCheckbox>
                    <label>Dar De Baja</label>
                </div>
            </div>
        </div>
    </div>
    

    
</EditForm>

@code {
    [Parameter] public Categoria Categoria { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
