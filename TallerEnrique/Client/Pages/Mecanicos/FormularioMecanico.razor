<EditForm Model="Mecanico" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            Mecánicos
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Nombres:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Mecanico.Nombre" />
                        <ValidationMessage For="@(() => Mecanico.Nombre)" />
                    </div>
                </div>

                <div class="form-group col-sm-4">
                    <label>Apellidos:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Mecanico.Apellido" />
                        <ValidationMessage For="@(() => Mecanico.Apellido)" />
                    </div>
                </div>

                <div class="form-group col-sm-4">
                    <label>Cédula:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Mecanico.Cedula" readonly="@ocultarcedula" />
                        <ValidationMessage For="@(() => Mecanico.Cedula)" />
                    </div>
                </div>

            </div>
            <div class=" row">
                <div class="form-group col-sm-8">
                    <label>Dirección:</label>
                    <div>
                        <InputTextArea class="form-control" @bind-Value="@Mecanico.Direccion" />
                        <ValidationMessage For="@(() => Mecanico.Direccion)" />
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Teléfono:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Mecanico.Telefono" />
                        <ValidationMessage For="@(() => Mecanico.Telefono)" />
                    </div>
                </div>
            </div>

            <div class="form-group col-12 d-flex justify-content-end" style="margin:5px">
                <button class="btn btn-success" style="margin:5px" type="submit">Guardar</button>
                <a class="btn btn-success" style="margin:5px" href="mecanicos">Cancelar</a>
                <MudTooltip Text="Desactiva o Reactiva un Registro." Color="Color.Secondary" Placement="Placement.Top">
                    <InputCheckbox @bind-Value="@Mecanico.Estado"></InputCheckbox>
                    <label style="display:flex"><b>Dar De Baja</b></label>
                </MudTooltip>
            </div>
        </div>
    </div>
  
</EditForm>

@code {
    [Parameter] public Mecanico Mecanico { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }//Para pasar eventos como parametro
    [Parameter] public bool ocultarcedula { get; set; } = false;
}
