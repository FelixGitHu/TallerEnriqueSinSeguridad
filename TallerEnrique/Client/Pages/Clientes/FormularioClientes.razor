<EditForm Model="Clientes" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="card">
        <div class="card-header">
            Clientes
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Nombres:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Nombres" />
                        <ValidationMessage For="@(() => Clientes.Nombres)" />
                    </div>
                </div>

                <div class="form-group col-sm-4">
                    <label>Apellidos:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Apellidos" />
                        <ValidationMessage For="@(() => Clientes.Apellidos)" />
                    </div>
                </div>

                <div class="form-group col-sm-4">
                    <label>Cédula:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Cedula" readonly="@ocultarcedula"/>
                        <ValidationMessage For="@(() => Clientes.Cedula)" />
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="form-group col-sm-4">
                    <label>Ciudad:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Ciudad" />
                        <ValidationMessage For="@(() => Clientes.Ciudad)" />
                    </div>
                </div>

                <div class="form-group col-sm-4">
                    <label>Departamento:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Departamento" />
                        <ValidationMessage For="@(() => Clientes.Departamento)" />
                    </div>
                </div>
                <div class="form-group col-sm-4">
                    <label>Teléfono:</label>
                    <div>
                        <InputText class="form-control" @bind-Value="@Clientes.Telefono" />
                        <ValidationMessage For="@(() => Clientes.Telefono)" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">
                    <button class="btn btn-success" type="submit">Guardar Cambios</button>
                    <a href="clientes" class="btn btn-success">Cancelar</a>
                    <MudTooltip Text="Desactiva o Reactiva un Registro."
                                Color="Color.Secondary" Placement="Placement.Top">
                        <InputCheckbox @bind-Value="@Clientes.Estado"></InputCheckbox>
                        <label><b>Dar De Baja</b></label>
                    </MudTooltip>
                </div>
            </div>
        </div>
    </div>

</EditForm>

@code {
    [Parameter] public Cliente Clientes { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    [Parameter] public bool ocultarcedula { get; set; } = false;
}
